<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.uib.master_project_app.TrackingActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView_trackingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:text="@string/not_tracking"
                />

            <TextView
                android:id="@+id/textView_trackingTime"
                android:layout_below="@+id/textView_trackingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:text="00:00"
                />

            <ImageView
                android:id="@+id/imageView_bluetoothLogo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/textView_trackingTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:adjustViewBounds="false"
                android:background="#aaaaaa"
                app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

            <TextView
                android:id="@+id/textView_infotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_bluetoothLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:lines="2"
                android:text="@string/infotext"
                android:textAlignment="center"
                android:textSize="24sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView_infotext"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/ic_media_play"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView_infotext"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:visibility="invisible"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:fabSize="mini"
                app:srcCompat="@android:drawable/btn_dialog"
                />
        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
